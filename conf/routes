# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Home page
GET     /                               controllers.Assets.at(path="/public", file="index.html")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)

#API
GET     /api/events                     @ca.ulaval.glo4003.controllers.Events.index()
GET     /api/events/:id                 @ca.ulaval.glo4003.controllers.Events.show(id: Long)
GET     /api/facets                     @ca.ulaval.glo4003.controllers.Facets.index()
GET     /api/tickets                    @ca.ulaval.glo4003.controllers.Tickets.index()
GET     /api/tickets/:id                @ca.ulaval.glo4003.controllers.Tickets.show(id: Long)
GET     /api/tickets/sections/:eventId  @ca.ulaval.glo4003.controllers.Tickets.showEventTicketSections(eventId: Long)
POST    /api/tickets/reserve            @ca.ulaval.glo4003.controllers.Tickets.reserve()
POST    /api/tickets/free               @ca.ulaval.glo4003.controllers.Tickets.free()
POST    /api/user/password              @ca.ulaval.glo4003.controllers.UserProfile.updatePassword()
POST    /api/user/email                 @ca.ulaval.glo4003.controllers.UserProfile.updateEmail()
GET     /bootstrap                      @ca.ulaval.glo4003.controllers.Bootstrap.index()
POST    /api/checkout                   @ca.ulaval.glo4003.controllers.Checkout.index()
GET     /login                          @ca.ulaval.glo4003.controllers.Authentication.index()
POST    /login                          @ca.ulaval.glo4003.controllers.Authentication.login()
POST    /logout                         @ca.ulaval.glo4003.controllers.Authentication.logout()
