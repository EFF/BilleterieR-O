# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Home page
GET     /                               controllers.Assets.at(path="/public", file="index.html")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)

#API
GET     /api/events                             @ca.ulaval.glo4003.controllers.EventsController.index()
GET     /api/events/:id                         @ca.ulaval.glo4003.controllers.EventsController.show(id: Long)
GET     /api/facets                             @ca.ulaval.glo4003.controllers.FacetsController.index()
GET     /api/tickets                            @ca.ulaval.glo4003.controllers.TicketsController.index()
GET     /api/tickets/:id                        @ca.ulaval.glo4003.controllers.TicketsController.show(id: Long)
GET     /api/events/:eventId/sections           @ca.ulaval.glo4003.controllers.TicketsController.showEventSections(eventId: Long)
GET     /api/tickets/number-of-tickets          @ca.ulaval.glo4003.controllers.TicketsController.numberOfTickets()
POST    /api/tickets/reserve                    @ca.ulaval.glo4003.controllers.TicketsController.reserve()
POST    /api/tickets/free                       @ca.ulaval.glo4003.controllers.TicketsController.free()
POST    /api/user/password                      @ca.ulaval.glo4003.controllers.UsersController.updatePassword()
POST    /api/user/email                         @ca.ulaval.glo4003.controllers.UsersController.updateEmail()
GET     /bootstrap                              @ca.ulaval.glo4003.controllers.BootstrapController.index()
POST    /api/checkout                           @ca.ulaval.glo4003.controllers.CheckoutController.index()
GET     /login                                  @ca.ulaval.glo4003.controllers.AuthenticationController.index()
POST    /login                                  @ca.ulaval.glo4003.controllers.AuthenticationController.login()
POST    /logout                                 @ca.ulaval.glo4003.controllers.AuthenticationController.logout()
